<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Transactiondetails">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fiftydep"
        android:layout_marginBottom="@dimen/fivedp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/twentydp"
            android:layout_height="@dimen/twentydp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twentydp"
            android:onClick="back"
            android:src="@drawable/ic_back"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/txt_serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/karlasemibold"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/ll1"
        android:background="@color/silver" />

    <TextView
        android:id="@+id/namee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/twentydp"
        android:fontFamily="@font/karlaregular"
        android:text="Selected Transaction Name"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteensp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="@dimen/fivedp"
        android:background="@color/lightgrey" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/twentydp"
        android:fontFamily="@font/karlaregular"
        android:text="Location"
        android:textColor="@color/grey"
        android:textSize="@dimen/tweleve" />

    <TextView
        android:id="@+id/locationee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/ten"
        android:fontFamily="@font/karlaregular"
        android:inputType="textCapSentences"
        android:text="Twin District Center, Sector -10, Rohini,Delhi"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteensp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="@dimen/fivedp"
        android:background="@color/lightgrey" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/twentydp"
        android:fontFamily="@font/karlaregular"
        android:text="Representative Name"
        android:textColor="@color/grey"
        android:textSize="@dimen/tweleve" />

    <TextView
        android:id="@+id/rnamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/ten"
        android:fontFamily="@font/karlaregular"
        android:text="Ritwiz"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteensp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="@dimen/fivedp"
        android:background="@color/lightgrey" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/twentydp"
        android:fontFamily="@font/karlaregular"
        android:text="Representative Contact Number "
        android:textColor="@color/grey"
        android:textSize="@dimen/tweleve" />

    <TextView
        android:id="@+id/rnumberr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/ten"
        android:fontFamily="@font/karlaregular"
        android:text="9990987099"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteensp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="@dimen/fivedp"
        android:background="@color/lightgrey" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/twentydp"
        android:fontFamily="@font/karlaregular"
        android:text="Billing Amount"
        android:textColor="@color/grey"
        android:textSize="@dimen/tweleve" />

    <TextView
        android:id="@+id/billamountt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/ten"
        android:fontFamily="@font/karlaregular"
        android:text="Rs. 100"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteensp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="@dimen/fivedp"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:id="@+id/billPhotoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/twentydp"
                android:fontFamily="@font/karlaregular"
                android:text="Upload Bill Photo"
                android:textColor="@color/grey"
                android:textSize="@dimen/tweleve" />

            <TextView
                android:id="@+id/iumage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/karlaregular"
                android:text="3665GHDY.png"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteensp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twentyfive"
            android:layout_weight="0.5"
            android:gravity="end|center"

            android:orientation="vertical">

            <Button
                android:id="@+id/viewphoto"
                android:layout_width="@dimen/hundreddp"
                android:layout_height="@dimen/thirtyfive"
                android:layout_marginRight="@dimen/twentydp"
                android:background="@drawable/silverround"
                android:text="View Photo"
                android:textSize="@dimen/ten" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="@dimen/fivedp"
        android:background="@color/lightgrey" />


    <LinearLayout
        android:id="@+id/selfiPhotoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/twentydp"
                android:fontFamily="@font/karlaregular"
                android:text="Upload Selfi Photo"
                android:textColor="@color/grey"
                android:textSize="@dimen/tweleve" />

            <TextView
                android:id="@+id/selfiImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/karlaregular"
                android:text="3665GHDY.png"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteensp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twentyfive"
            android:layout_weight="0.5"
            android:gravity="end|center"
            android:orientation="vertical">

            <Button
                android:id="@+id/viewSelfiphoto"
                android:layout_width="@dimen/hundreddp"
                android:layout_height="@dimen/thirtyfive"
                android:layout_marginRight="@dimen/twentydp"
                android:background="@drawable/silverround"
                android:text="View Photo"
                android:textSize="@dimen/ten" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="@dimen/fivedp"
        android:background="@color/lightgrey" />


    <RelativeLayout
        android:id="@+id/otpverify"
        android:layout_width="@dimen/threehundred"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/sixtydp"
        android:background="@drawable/roundbutton"
        android:onClick="back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/karlaregular"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>