<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneten"
        android:id="@+id/layout"
         android:background="@color/white"
        android:weightSum="1"

        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
             android:layout_height="wrap_content"
            >
            <ImageView
                 android:layout_width="@dimen/hundreddp"
                android:layout_height="@dimen/eightydp"
                android:layout_gravity="center|left"
                android:scaleType="fitXY"
                android:id="@+id/image"
                android:src="@drawable/hotelimage" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karlabold"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxLength="75"
            android:id="@+id/title"
            android:text="School Reopening News : The School is reopening from 10th of july in 2021"
            android:layout_marginTop="@dimen/twentydp"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteensp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karlaregular"
            android:layout_below="@+id/btn"
            android:text="10 min ago"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/twentydp"
            android:id="@+id/date"
            android:textColor="@color/grey"
            android:textSize="@dimen/fourteensp"
            />

</LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/lightgrey" />

</LinearLayout>