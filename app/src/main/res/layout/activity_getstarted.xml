<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    android:paddingBottom="@dimen/sixtydp"
    android:orientation="vertical"
    tools:context=".Getstarted">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/karlabold"
        android:text="Welcome to \n DRIVE 13"
        android:textColor="@color/black"
        android:textSize="@dimen/twentyfive"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/twohundreddp"
        android:scaleType="center"
        android:src="@drawable/ic_welcome_background" />

    <ImageView
        android:layout_width="@dimen/twohundreddp"
        android:layout_height="@dimen/hundreddp"
        android:layout_gravity="center"
        android:src="@drawable/ic_drive13logo_welcome" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/thirtyfive"
        android:layout_alignParentBottom="true"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="sendotp"

       android:id="@+id/btn"
         android:background="@drawable/roundbutton"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:text="Get Started"
            android:fontFamily="@font/karlaregular"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="@dimen/fiftydep"
            android:layout_height="@dimen/fiftydep"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_get_started_icon" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/karlaregular"
            android:layout_below="@+id/btn"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Already Have an account?"
            android:textColor="@color/grey"
            android:textSize="@dimen/sixteensp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/karlaregular"
                android:layout_below="@+id/btn"
                android:layout_gravity="center"
                android:onClick="login"
                android:layout_centerHorizontal="true"
                android:text=" login"
                android:textColor="@color/blue"
                android:textSize="@dimen/sixteensp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>