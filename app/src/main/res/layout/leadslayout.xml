<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundreddp"
        android:background="@color/white"
        android:id="@+id/layout"
         android:orientation="horizontal"

        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.37"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/ten"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView

                    android:layout_width="@dimen/fiftydep"
                    android:layout_height="@dimen/fourtydp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/twentydp"
                    android:layout_marginRight="@dimen/twentydp"
                    android:src="@drawable/ic_drive13logo_welcome" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/karlaregular"

                android:gravity="center_vertical"
                android:text="Trip Number #1233344"
                android:id="@+id/tripnumber"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteensp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:id="@+id/fromtodes"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/karlaregular"
                android:text="Delhi to Uttar pradesh"
                android:textColor="@color/grey"
                android:textSize="@dimen/tweleve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:layout_marginTop="@dimen/fivedp"
                android:id="@+id/datetime"
                android:fontFamily="@font/karlaregular"
                android:text="9:00 AM on 10-Feb-2021"
                android:textColor="@color/grey"
                android:textSize="@dimen/tweleve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.38"
            android:gravity="end|center"
            android:orientation="vertical"
            android:paddingRight="@dimen/fivedp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:layout_marginTop="@dimen/ten"
                android:visibility="gone"
                android:fontFamily="@font/karlaregular"
                android:text="12:30 PM"
                android:id="@+id/time"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/tweleve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn"
                android:layout_marginTop="@dimen/fivedp"
                android:gravity="end"
                android:fontFamily="@font/karlaregular"
                android:text="30-01-2021"
                android:id="@+id/date"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/tweleve" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/lightgrey" />

</LinearLayout>