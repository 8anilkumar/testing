<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
   android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/eightydp"
        android:onClick="transactionview"
        android:id="@+id/layout"
        android:background="@color/white"
        android:weightSum="1"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="0.37"
            android:layout_height="match_parent"
            >
            <ImageView

            android:layout_width="@dimen/seventy"
            android:layout_height="@dimen/sixtydp"
            android:layout_gravity="center|left"
            android:scaleType="fitXY"
                android:id="@+id/image"
            android:layout_marginRight="@dimen/twentydp"
            android:layout_marginLeft="@dimen/twentydp"
            android:src="@drawable/hotelimage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karlasemibold"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:id="@+id/name"
            android:paddingRight="5dp"
            android:text="Ritz-Carlton Hotel"
            android:layout_marginTop="@dimen/ten"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteensp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karlaregular"
            android:layout_below="@+id/btn"
            android:id="@+id/location"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/fivedp"
            android:text="Twin District Center, Sector - 10,\nRohini,Delhi "
            android:textColor="@color/grey"
            android:textSize="@dimen/tweleve"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center"
            android:paddingRight="@dimen/fivedp"
            android:orientation="vertical"
            android:layout_weight="0.38"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karlaregular"
                android:layout_below="@+id/btn"
                android:layout_marginTop="@dimen/ten"
                android:text="12:30 PM"
                android:visibility="gone"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/tweleve"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karlaregular"
                android:layout_below="@+id/btn"
                android:layout_marginTop="@dimen/fivedp"
                android:gravity="end|center_vertical"
                android:text="30-01-2021"
                android:id="@+id/insertdate"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/tweleve"
                />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/lightgrey" />

</LinearLayout>